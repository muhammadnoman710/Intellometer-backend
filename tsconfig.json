{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true, 
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@prisma/client": ["src/types/prisma-client-shim.d.ts"],
      "express-validator": ["node_modules/express-validator/lib/index.d.ts"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src"]
}
